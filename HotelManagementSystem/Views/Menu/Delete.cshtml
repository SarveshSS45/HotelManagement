@model HotelManagementSystem.Models.Menu

@{
    ViewData["Title"] = "Delete Menu Item";
}

<h1>Delete Menu Item</h1>

<h3>Are you sure you want to delete this item?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Item Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ItemName)</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MenuId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>