@model HotelManagementSystem.Models.Order

@{
    ViewData["Title"] = "Create Order";
}

<h1>Create Order</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="CustomerId" class="control-label">Select Customer</label>
        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.Customers">
            <option value="">-- Select Customer --</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="MenuItems" class="control-label">Menu Items</label>
        <table class="table">
            <thead>
                <tr width="100%">
                    <th width="50%">Item</th>
                    <th width="25%">Price</th>
                    <th width="25%">Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var menu in ViewBag.Menus)
                {
                    <tr width="100%">
                        <td width="75%" colspan="2">@menu.Text</td>
                        <td width="25%">
                            <input type="number" name="quantities" value="0" min="0" class="form-control" />
                            <input type="hidden" name="menuIds" value="@menu.Value" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>