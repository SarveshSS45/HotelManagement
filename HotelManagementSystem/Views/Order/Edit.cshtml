@model HotelManagementSystem.Models.Order

@{
    ViewData["Title"] = "Edit Order";
}

<h1>Edit Order</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="OrderId" />
    <div class="form-group">
        <label for="CustomerId" class="control-label">Customer</label>
        <select id="CustomerId" name="CustomerId" class="form-control" asp-items="ViewBag.Customers">
            <option value="">-- Select Customer --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="MenuItems" class="control-label">Menu Items</label>
        <table class="table">
            <thead>
                <tr width="100%">
                    <th width="35%">Item</th>
                    <th width="25%">Price</th>
                    <th width="20%">Quantity</th>
                    <th width="20%">Previous <br/>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var menu in ViewBag.Menus)
                {
                    <tr width="100%">
                        <td width="60%" colspan="2">@menu.Text</td>
                        <td width="20%">
                            <input type="number" name="quantities" value="0" min="0" class="form-control" />
                            <input type="hidden" name="menuIds" value="@menu.Value" />
                        </td>
                        <td width="20%">@menu.EditText</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr width="100%">
                    <td colspan="3" align="right" class="control-label">Previous Bill</td>
                    <td class="control-label">@ViewBag.TotalAmount</td>
                </tr>
            </tfoot>
        </table>

    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>