@model IEnumerable<HotelManagementSystem.Models.Customer>
@{
    ViewData["Title"] = "Customers - DineEase";
}

<style>
    .page-header {
        background: linear-gradient(135deg, #8b5cf6 0%, #5b21b6 100%);
        color: white;
        padding: 2rem 0;
        margin: -2rem -15px 2rem -15px;
        border-radius: 0 0 20px 20px;
        position: relative;
        overflow: hidden;
    }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 60 60"><defs><pattern id="grid" width="60" height="60" patternUnits="userSpaceOnUse"><path d="M 60 0 L 0 0 0 60" fill="none" stroke="%23ffffff" stroke-width="1" opacity="0.1"/></pattern></defs><rect width="60" height="60" fill="url(%23grid)"/></svg>');
            opacity: 0.3;
        }

    .page-header-content {
        position: relative;
        z-index: 2;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .page-subtitle {
        font-size: 1.1rem;
        opacity: 0.9;
        margin-bottom: 0;
    }

    .customers-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(139, 92, 246, 0.15);
        overflow: hidden;
        margin-bottom: 2rem;
        border: 1px solid rgba(139, 92, 246, 0.1);
    }

    .table-header {
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(91, 33, 182, 0.15) 100%);
        padding: 1.5rem 2rem;
        border-bottom: 1px solid rgba(139, 92, 246, 0.2);
    }

    .table-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #5b21b6;
        margin-bottom: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .search-filter-bar {
        background: #faf8ff;
        padding: 1.5rem 2rem;
        border-bottom: 1px solid rgba(139, 92, 246, 0.1);
    }

    .search-box {
        position: relative;
        max-width: 400px;
    }

    .search-input {
        width: 100%;
        padding: 0.75rem 1rem 0.75rem 3rem;
        border: 2px solid rgba(139, 92, 246, 0.2);
        border-radius: 12px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        background: white;
    }

        .search-input:focus {
            outline: none;
            border-color: #8b5cf6;
            box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
        }

    .search-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #8b5cf6;
        font-size: 1rem;
    }

    .add-customer-btn {
        background: linear-gradient(135deg, #8b5cf6 0%, #5b21b6 100%);
        color: white;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(139, 92, 246, 0.3);
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 0.5px;
    }

        .add-customer-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(139, 92, 246, 0.4);
            color: white;
            text-decoration: none;
            background: linear-gradient(135deg, #7c3aed 0%, #4c1d95 100%);
        }

    .customers-table {
        margin: 0;
        border: none;
    }

        .customers-table thead th {
            background: linear-gradient(135deg, #5b21b6 0%, #4c1d95 100%);
            color: white;
            border: none;
            padding: 1.25rem 1.5rem;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            position: relative;
        }

            .customers-table thead th:first-child {
                border-radius: 0;
            }

            .customers-table thead th:last-child {
                border-radius: 0;
            }

        .customers-table tbody td {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid rgba(139, 92, 246, 0.1);
            vertical-align: middle;
            font-size: 0.95rem;
        }

        .customers-table tbody tr {
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .customers-table tbody tr:hover {
                background: linear-gradient(135deg, rgba(139, 92, 246, 0.05) 0%, rgba(91, 33, 182, 0.03) 100%);
                transform: scale(1.005);
            }

    .customer-name {
        font-weight: 600;
        color: #1e293b;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .customer-avatar {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #8b5cf6 0%, #5b21b6 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 0.9rem;
        box-shadow: 0 2px 8px rgba(139, 92, 246, 0.3);
    }

    .customer-email {
        color: #64748b;
        font-size: 0.9rem;
    }

    .customer-phone {
        color: #1e293b;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .action-btn {
        padding: 0.5rem 1rem;
        border: none;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        text-transform: uppercase;
        letter-spacing: 0.3px;
    }

    .btn-edit {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
        box-shadow: 0 2px 8px rgba(245, 158, 11, 0.3);
    }

        .btn-edit:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 15px rgba(245, 158, 11, 0.4);
            color: white;
        }

    .btn-details {
        background: linear-gradient(135deg, #8b5cf6 0%, #5b21b6 100%);
        color: white;
        box-shadow: 0 2px 8px rgba(139, 92, 246, 0.3);
    }

        .btn-details:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 15px rgba(139, 92, 246, 0.4);
            color: white;
            background: linear-gradient(135deg, #7c3aed 0%, #4c1d95 100%);
        }

    .btn-delete {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        box-shadow: 0 2px 8px rgba(239, 68, 68, 0.3);
    }

        .btn-delete:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 15px rgba(239, 68, 68, 0.4);
            color: white;
        }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #64748b;
    }

    .empty-icon {
        font-size: 4rem;
        color: rgba(139, 92, 246, 0.3);
        margin-bottom: 1rem;
    }

    .stats-bar {
        background: white;
        border-radius: 16px;
        padding: 1.5rem 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 20px rgba(139, 92, 246, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
        border: 1px solid rgba(139, 92, 246, 0.1);
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .stat-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(91, 33, 182, 0.15) 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #5b21b6;
        font-size: 1.25rem;
        border: 1px solid rgba(139, 92, 246, 0.2);
    }

    .stat-content h4 {
        font-size: 1.5rem;
        font-weight: 700;
        color: #8b5cf6;
        margin: 0;
    }

    .stat-content p {
        margin: 0;
        color: #64748b;
        font-size: 0.9rem;
        font-weight: 500;
    }

    /* Purple accent colors for icons */
    .fas.fa-envelope,
    .fas.fa-phone {
        color: #8b5cf6 !important;
    }

    /* Enhanced hover effects with purple theme */
    .customer-row:hover .customer-avatar {
        box-shadow: 0 4px 15px rgba(139, 92, 246, 0.4);
        transform: scale(1.05);
    }

    .customer-row:hover .fas.fa-envelope,
    .customer-row:hover .fas.fa-phone {
        color: #5b21b6 !important;
    }

    @@media (max-width: 768px) {
        .page-title {
            font-size: 2rem;
        }

        .search-filter-bar {
            padding: 1rem;
        }

            .search-filter-bar .row {
                gap: 1rem;
            }

        .add-customer-btn {
            width: 100%;
            justify-content: center;
            margin-top: 1rem;
        }

        .action-buttons {
            flex-direction: column;
        }

        .action-btn {
            justify-content: center;
        }

        .stats-bar {
            flex-direction: column;
            text-align: center;
        }

        .customers-table {
            font-size: 0.85rem;
        }

            .customers-table thead th,
            .customers-table tbody td {
                padding: 0.75rem 0.5rem;
            }
    }</style>

<!-- Page Header -->
<div class="page-header">
    <div class="container page-header-content">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="page-title">
                    <i class="fas fa-users"></i>
                    Customers
                </h1>
                <p class="page-subtitle">Manage your hotel customers and their information</p>
            </div>
            <div class="col-md-4 text-md-end">
                <i class="fas fa-user-friends" style="font-size: 4rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Bar -->
<div class="stats-bar">
    <div class="stat-item">
        <div class="stat-icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="stat-content">
            <h4>@(Model?.Count() ?? 0)</h4>
            <p>Total Customers</p>
        </div>
    </div>
    <div class="stat-item">
        <div class="stat-icon">
            <i class="fas fa-user-plus"></i>
        </div>
        <div class="stat-content">
            <h4>12</h4>
            <p>New This Month</p>
        </div>
    </div>
    <div class="stat-item">
        <div class="stat-icon">
            <i class="fas fa-star"></i>
        </div>
        <div class="stat-content">
            <h4>89%</h4>
            <p>Satisfaction Rate</p>
        </div>
    </div>
</div>

<!-- Customers Container -->
<div class="customers-container">
    <!-- Table Header -->
    <div class="table-header">
        <h2 class="table-title">
            <i class="fas fa-list"></i>
            Customer Directory
        </h2>
    </div>

    <!-- Search and Filter Bar -->
    <div class="search-filter-bar">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" class="search-input" placeholder="Search customers by name, email, or phone..." id="customerSearch">
                </div>
            </div>
            <div class="col-md-6 text-md-end">
                <a asp-action="Create" class="add-customer-btn">
                    <i class="fas fa-plus"></i>
                    Add New Customer
                </a>
            </div>
        </div>
    </div>

    <!-- Customers Table -->
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table customers-table">
                <thead>
                    <tr>
                        <th><i class="fas fa-user me-2"></i>Customer</th>
                        <th><i class="fas fa-envelope me-2"></i>Email</th>
                        <th><i class="fas fa-phone me-2"></i>Phone</th>
                        <th><i class="fas fa-cogs me-2"></i>Actions</th>
                    </tr>
                </thead>
                <tbody id="customersTableBody">
                    @foreach (var item in Model)
                    {
                        <tr class="customer-row">
                            <td>
                                <div class="customer-name">
                                    <div class="customer-avatar">
                                        @(item.Name?.Substring(0, 1).ToUpper() ?? "?")
                                    </div>
                                    <div>
                                        <div style="font-weight: 600; color: #1e293b;">@Html.DisplayFor(modelItem => item.Name)</div>
                                        <small class="text-muted">Customer ID: @item.CustomerId</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="customer-email">
                                    <i class="fas fa-envelope me-2 text-muted"></i>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </div>
                            </td>
                            <td>
                                <div class="customer-phone">
                                    <i class="fas fa-phone me-2 text-muted"></i>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.CustomerId" class="action-btn btn-edit">
                                        <i class="fas fa-edit"></i>Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.CustomerId" class="action-btn btn-details">
                                        <i class="fas fa-eye"></i>Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CustomerId" class="action-btn btn-delete" onclick="return confirm('Are you sure you want to delete this customer?')">
                                        <i class="fas fa-trash"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-user-slash empty-icon"></i>
            <h3>No Customers Found</h3>
            <p>Start by adding your first customer to the system.</p>
            <a asp-action="Create" class="add-customer-btn mt-3">
                <i class="fas fa-plus"></i>
                Add First Customer
            </a>
        </div>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Search functionality
        const searchInput = document.getElementById('customerSearch');
        const tableRows = document.querySelectorAll('.customer-row');

        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();

                tableRows.forEach(row => {
                    const name = row.querySelector('.customer-name').textContent.toLowerCase();
                    const email = row.querySelector('.customer-email').textContent.toLowerCase();
                    const phone = row.querySelector('.customer-phone').textContent.toLowerCase();

                    if (name.includes(searchTerm) || email.includes(searchTerm) || phone.includes(searchTerm)) {
                        row.style.display = '';
                        row.style.animation = 'fadeIn 0.3s ease';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        }

        // Add loading animation to action buttons
        const actionButtons = document.querySelectorAll('.action-btn');
        actionButtons.forEach(button => {
            if (!button.classList.contains('btn-delete')) {
                button.addEventListener('click', function(e) {
                    const originalText = this.innerHTML;
                    this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Loading...';
                    this.style.pointerEvents = 'none';

                    // Reset after 3 seconds (in case navigation fails)
                    setTimeout(() => {
                        this.innerHTML = originalText;
                        this.style.pointerEvents = 'auto';
                    }, 3000);
                });
            }
        });

        // Add row click functionality for better UX
        tableRows.forEach(row => {
            row.addEventListener('click', function(e) {
                if (!e.target.closest('.action-buttons')) {
                    // Could navigate to details page or show quick preview
                    this.style.background = 'rgba(139, 92, 246, 0.05)';
                    setTimeout(() => {
                        this.style.background = '';
                    }, 200);
                }
            });
        });

        // Enhanced purple glow effect on hover
        tableRows.forEach(row => {
            row.addEventListener('mouseenter', function() {
                this.style.boxShadow = '0 4px 20px rgba(139, 92, 246, 0.1)';
            });

            row.addEventListener('mouseleave', function() {
                this.style.boxShadow = '';
            });
        });
    });

    // Add fade-in animation
    const style = document.createElement('style');
    style.textContent = `
    @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

    @@keyframes purpleGlow {
            0% { box-shadow: 0 0 5px rgba(139, 92, 246, 0.3); }
            50% { box-shadow: 0 0 15px rgba(139, 92, 246, 0.5); }
            100% { box-shadow: 0 0 5px rgba(139, 92, 246, 0.3); }
        }
    `;
    document.head.appendChild(style);
</script>